<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_regular_gray_text_hint_size_12">
        <item name="android:textColor">@color/qu_grey_600</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="style_text_container">
        <item name="colorPrimary">#727272</item>
        <item name="colorPrimaryDark">#727272</item>
        <item name="colorAccent">#727272</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_500</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
    </style>

    <style name="style_txt_subtittle_size_16">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

</resources>